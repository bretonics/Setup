case "${OSTYPE}" in
    darwin*)
        alias  ls="ls -GFh"
        alias  ll="ls -laGFh"
        ;;
    linux*)
        alias  ls="ls -GFh --color=yes"
        alias  ll="ls -GFhla --color=yes"
        ;;
esac

alias  cp="cp -i"
alias  rm="rm -i"
